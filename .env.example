# Agenticore — Environment Variables
# Copy to .env and customize for your deployment.

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://redis:6379/0
REDIS_KEY_PREFIX=agenticore

# =============================================================================
# POSTGRES (shared by agenticore + postgres services)
# =============================================================================
POSTGRES_USER=agenticore
POSTGRES_PASSWORD=agenticore
POSTGRES_DB=agenticore
POSTGRES_URL=postgresql://agenticore:agenticore@postgres:5432/agenticore

# =============================================================================
# AGENTICORE SERVER
# =============================================================================

# Transport mode: "stdio" (local MCP) or "sse" (HTTP remote)
AGENTICORE_TRANSPORT=sse

# SSE/HTTP bind address and port
AGENTICORE_HOST=0.0.0.0
AGENTICORE_PORT=8200

# Comma-separated API keys for authentication (empty = no auth)
AGENTICORE_API_KEYS=

# =============================================================================
# CLAUDE CODE
# =============================================================================
AGENTICORE_CLAUDE_BINARY=claude
AGENTICORE_CLAUDE_TIMEOUT=3600
AGENTICORE_DEFAULT_PROFILE=code
# AGENTICORE_CLAUDE_CONFIG_DIR=

# =============================================================================
# REPOS
# =============================================================================
AGENTICORE_REPOS_ROOT=/home/agenticore/agenticore-repos
AGENTICORE_MAX_PARALLEL_JOBS=3
AGENTICORE_JOB_TTL=86400

# =============================================================================
# OTEL
# =============================================================================
AGENTICORE_OTEL_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
OTEL_EXPORTER_OTLP_PROTOCOL=grpc
AGENTICORE_OTEL_LOG_PROMPTS=false
AGENTICORE_OTEL_LOG_TOOL_DETAILS=true

# =============================================================================
# GITHUB (for auto-PR)
# =============================================================================
GITHUB_TOKEN=

# =============================================================================
# LANGFUSE (agent observability)
# =============================================================================
LANGFUSE_HOST=https://cloud.langfuse.com
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
# LANGFUSE_BASIC_AUTH is base64(public_key:secret_key) — used by OTEL collector
LANGFUSE_BASIC_AUTH=

# =============================================================================
# CLOUDFLARE ACCESS (for reaching services behind CF Zero Trust)
# =============================================================================
CF_ACCESS_CLIENT_ID=
CF_ACCESS_CLIENT_SECRET=

# =============================================================================
# ANTHROPIC (Claude CLI API key)
# =============================================================================
ANTHROPIC_API_KEY=

# =============================================================================
# AGENTIHOOKS
# =============================================================================
# Path to cloned agentihooks repo (e.g. /app). Enables external profiles + wired hooks.
AGENTICORE_AGENTIHOOKS_PATH=
